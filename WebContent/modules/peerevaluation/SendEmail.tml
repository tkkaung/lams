<html t:type="layout" 
	title="${message:email-reminder}"
	currentModule="${moduleName}"
	currentProj="project"
	breadcrumb="${project.encodeddisplayname}=project/home?${project.id}
		,${module.displayName}=modules/peerevaluation/home?${project.id}
		,${message:manage-evaluation}=modules/peerevaluation/manage?${project.id}
		,${message:check-status-evaluation}=modules/peerevaluation/checkstatus?${eval.id}
		,${message:email-reminder}=modules/peerevaluation/sendemail
		"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
   xmlns:p="tapestry:parameter">


<form t:type="form" t:id="form" class="e-formeditor">
		<div class="t-beaneditor">
			<t:errors />
			<table>
				<tr>
					<td class="label">
							${message:fromAddr-label}
					</td>
					<td>
						${getCurUser().email}
					</td>
				</tr>
				<tr>
					<td class="label">
						${message:toAddr-label} 
					</td>
					<td>
						${user.getEmail()}
					</td>
				</tr>
				<tr>
					<td class="label">
						<t:label for="subject" />
					</td>
					<td>
						<input t:type="textfield" t:id="subject" value="subject" maxlenght="255" class="lwidth"/>
				
					</td>
				</tr>
				
				<tr>
					<td class="label"><t:label for="content" /></td>
					<td >
						<textarea t:type="ck/editor" t:id="content" value="msgContent"
	    		            customConfiguration="context:lib/js_config/ckeditor.js" toolbarSet="simpleToolbar"
	                		width="660px" height="300px" class="lwidth"></textarea>
					</td>
				</tr>
					<tr>
					<td ></td>
					<td><t:submit value="${message:send}" t:id="send1" class="squared"  /></td>
				</tr>
			
				
			</table>
		</div>
	</form>
					


</html>